            android:layout_marginLeft="0dp"
            android:layout_marginTop="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text1"
                android:textColor="#ffffff"
                android:layout_marginLeft="300dp"
                android:layout_width="50dp"
