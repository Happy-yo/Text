                android:text="S1"
                android:textColor="#ffffff"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/text7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/subway_bk7"
                android:gravity="center"
